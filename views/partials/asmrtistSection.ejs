<section class="asmrtist-by-id">
    <h2><%= asmrtist.name %></h2>
    <h3><i class="fa-brands fa-youtube"></i> YouTube Channel</h2>
    <p>Visit <%= asmrtist.name %>'s Channel:</p>
    <p><a href="<%= asmrtist.yt_channel %>"><%= asmrtist.yt_channel %></a></p>
    <h3>Associated Categories</h3>
    <p><%= asmrtist.name %> creates ASMR of the following styles:</p>
    <ul>
        <% categories.forEach(category => { %>
            <li><a href="/categories/<%= category.id %>"><%= category.name %></a></li>
        <% }) %>
    </ul>
    <h3 class="text-center">Manage</h3>
    <p class="text-center">Edit or delete this ASMRtist.</p>
    <div class="asmrtist-manage-buttons">
        <span class="edit-asmrtist-button text-center">
            <a href="/asmrtists/<%= asmrtist.id %>/edit"><i class="fa-solid fa-pen"></i></a>
        </span>
        <span class="delete-asmrtist-button text-center">
            <a href="/asmrtists/<%= asmrtist.id %>/delete"><i class="fa-solid fa-trash"></i></a>
        </span>
    </div>
    
    

    
</section>