<section class="container my-5">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4 mb-4">
        <% categories.forEach((category) => { %>
            <div class="col d-flex justify-content-center">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title text-center"><%= category.name %></h3>
                    </div>
                    <span class="text-decoration-none d-flex justify-content-center category-image">
                        <img src="<%= category.image %>" class="img-fluid card-img-top" alt="<%= category.name %>" style="object-fit: cover; height: 20rem; width: 20rem;">
                    </span>
                    <a href="/categories/<%= category.id %>" class="text-center category-view-button">
                        <button>View & Manage</button>
                    </a>
                </div>
            </div>
        <% }) %>
    </div>
</section>