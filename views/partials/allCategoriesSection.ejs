<section>
    <h2>Categories</h2>
    <div class="all-categories">
        <% categories.forEach((category)=> { %>
            <div class="category">
                <div class="category-image">
                    <img src="<%= category.image %>" alt="<%= category.name %>">
                </div>
                <div>
                    <h3>
                        <%= category.name %>
                    </h3>
                    <p>
                        "<%= category.description %>"
                    </p>
                </div>
            </div>
        <% }) %>
    </div>
</section>